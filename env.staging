# Staging Environment - Accelerated cadences for rapid validation  
CRM_ENV=staging
DATABASE_URL=postgres://crm_user:crm_password@localhost:5432/crm_staging?sslmode=disable
GIN_MODE=debug

# Database settings for staging
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password
POSTGRES_DB=crm_staging
POSTGRES_PORT=5432

# Staging-specific settings
LOG_LEVEL=info
SCHEDULER_ENABLED=true
SCHEDULER_CRON="*/5m"  # Run every 5 minutes for staging

# Reminder cadence overrides (handled in code based on CRM_ENV)
# Weekly = 10 minutes (test 1 week in 10 minutes)
# Monthly = 1 hour (test 1 month in 1 hour)
# Quarterly = 3 hours (test 1 quarter in 3 hours)
# Biannual = 6 hours
# Annual = 12 hours
